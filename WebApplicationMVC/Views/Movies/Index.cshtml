@model IEnumerable<Movies>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Movies List</h1>
        </div>
        <div class="col-6 text-end">

            <a asp-controller="Movies" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Movie
            </a>
        </div>
    </div>



    <table class="table table-bordered table-striped" style="width:100%">
        <thead>

            <tr>
                <th>
                    Movie Name
                </th>
                <th>
                    Movie Release Date
                </th>
                <th>
                    Movie Rating
                </th>
                <th>
                    Genre
                </th>
                <th>
                    Casts
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Movie_Name
                    </td>
                    <td width="20%">
                        @item.Movie_ReleaseDate
                    </td>
                    <td width="20%">
                        @item.Movie_Rating
                    </td>
                    <td width="20%">
                        @item.Genre
                    </td>
                    <td width="20%">
                        @item.Casts
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>